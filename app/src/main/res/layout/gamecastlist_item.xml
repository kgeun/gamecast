<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bulpi_9patch_v2"
            android:paddingBottom="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="8dp"
            android:id="@+id/layout_tnilBG">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/img_gamecast_tnil"
                android:src="@drawable/owplaceholder"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유튜브 동영상"
                android:id="@+id/txt_gamecast_articleSource"
                android:singleLine="false"
                android:textSize="9dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bulpi_9patch_v2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_weight="0.8"
        android:layout_marginLeft="-10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="꿀잼"
                android:id="@+id/txt_gamecast_articlegroup1"
                android:textAllCaps="false"
                android:background="@drawable/eventback"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="꿀잼"
                android:id="@+id/txt_gamecast_articlegroup2"
                android:textAllCaps="false"
                android:background="@drawable/eventback"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루시우는 미끼였다! 받아라! #가두리양식"
            android:id="@+id/txt_gamecast_articletitle"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오버워치 하이라이트"
            android:id="@+id/txt_gamecast_writeranddate"
            android:textSize="11dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingTop="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/txt_bestitems_view"
                        android:src="@drawable/ddabongicon"
                        android:layout_marginRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:focusableInTouchMode="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/txt_gamecast_likeitcount"
                        android:textSize="11dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/txt_bestitems_view" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/imageView18"
                        android:src="@drawable/commenticon"
                        android:layout_marginRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:id="@+id/txt_gamecast_commentcount"
                        android:textSize="11dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView18" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:id="@+id/imageView19"
                        android:src="@drawable/viewpersonicon2"
                        android:layout_marginRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:id="@+id/txt_gamecast_viewcount"
                        android:textSize="11dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView19" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>